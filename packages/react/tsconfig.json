{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist",
    "composite": true,
    "target": "es2018",
    "lib": ["dom", "es2017", "esnext"],
    "jsx": "react",
    "baseUrl": ".",
    "types": ["@testing-library/jest-dom", "node", "jest"],
    "paths": {
      "@/components/*": ["components/*"],
      "@/utils/*": ["utils/*"],
      "@/theme/*": ["theme/*"]
    }
  },
  "include": [
    "package.json",
    "rollup.config.js",
    "jest.config.js",
    "jest.setup.ts",
    "components/**/*",
    "stories/**/*",
    "utils/**/*",
    "theme/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
