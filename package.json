{
  "name": "stoui-monorepo",
  "private": true,
  "description": "Stone UI",
  "engines": {
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm"
  },
  "workspaces": [
    "packages/*",
    "example/*"
  ],
  "scripts": {
    "update-deps": "pnpm update -i -r --latest",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "dev:react": "pnpm --filter @stoui/react storybook",
    "test:react": "pnpm --filter @stoui/react test",
    "build:react": "pnpm --filter @stoui/react build",
    "lint": "pnpm -r lint",
    "prettier": "pnpm -r prettier",
    "format": "pnpm -r format",
    "changelog": "echo 'generate master changelog' && conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "release:version": "lerna version --no-private --exact --no-changelog --no-push --no-git-tag-version",
    "release:build": "lerna run --parallel build --no-private",
    "release:publish": "lerna publish --no-private from-package --dist-tag next --contents dist",
    "commit": "git-cz",
    "tsc": "tsc --build"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "lerna": "^7.1.1",
    "lint-staged": "^13.2.3",
    "monorepo-run": "^0.4.2",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-toolbelt": "^9.6.0",
    "tslib": "^2.6.0",
    "typescript": "^5.1.6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/haiyon/stoui.git"
  },
  "bugs": {
    "url": "https://github.com/haiyon/stoui/issues"
  },
  "author": "Shen <hi@haiyon.com>",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "npm run format",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "license": "MIT"
}
